{
	"name": "utis-nfc-reader",
	"version": "1.0.0",
	"main": "dist/main.js",
	"bin": "dist/main.js",
	"scripts": {
		"build": "tsc",
		"dev": "nodemon",
		"start": "node dist/main.js",
		"build-linux": "pkg dist/main.js --t node22-linux-x64 --output build/linux-app",
		"build-macos": "npm run build && pkg dist/main.js -t node22-macos-arm64 --output build/mac-app --debug --compress GZip",
		"build-windows": "pkg dist/main.js -t node22-win-x64 --output build/win-app"
	},
	"dependencies": {
		"@pcsc-mini/linux-aarch64-gnu": "^0.1.3",
		"@pcsc-mini/linux-x86_64-gnu": "^0.1.3",
		"@pcsc-mini/linux-x86-gnu": "^0.1.3",
		"@pcsc-mini/macos-aarch64": "^0.1.3",
		"@pcsc-mini/windows-aarch64-node": "^0.1.3",
		"@pcsc-mini/windows-x86_64-node": "^0.1.3",
		"node-systray-v2": "github:Edgar-P-yan/node-systray-v2",
		"npm": "^11.6.1",
		"pcsc-mini": "^0.1.3",
		"ws": "^8.17.0"
	},
	"pkg": {
		"scripts": "dynamic-requires.js",
		"ignore": [],
		"targets": [
			"node22-macos-arm64",
			"node22-win-x64",
			"node22-linux-x64"
		],
		"outputPath": "build"
	},
	"devDependencies": {
		"@appthreat/caxa": "^1.0.12",
		"@types/node": "^20.11.5",
		"@types/ws": "^8.5.10",
		"@yao-pkg/pkg": "^6.7.0",
		"nodemon": "^3.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	}
}
